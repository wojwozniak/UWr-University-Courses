<!-- views/form.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Submission Form</title>
</head>

<body>
    <h1>Task Submission Form</h1>
    <% if (locals.error) { %>
        <p style="color: red;">
            <%= locals.error %>
        </p>
        <% } %>
            <form action="/submit" method="post">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" required><br>

                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" required><br>

                <label for="activity">Activity:</label>
                <input type="text" id="activity" name="activity" required><br>

                <label for="tasks">Task Results (comma-separated):</label>
                <input type="text" id="tasks" name="tasks" required><br>

                <button type="submit">Submit</button>
            </form>
</body>

</html>